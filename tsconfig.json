{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "jsx": "react-jsx"
  },
  "include": [
    "src/js",
    "generate-api-client.js",
    "src/utils",
    "src/types",
    "src/store",
    "src/services",
    "src/pages",
    "src/hooks",
    "src/components",
    "src/ThemeContextProvider.tsx",
    "src/theme.ts",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
